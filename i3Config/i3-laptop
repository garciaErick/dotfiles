#================ Custom Actions================#
## Lock Screen
bindsym $mod+Shift+o exec i3lock -i ~/Dropbox/monogatari/*.png -t
bindsym $mod+Shift+c reload # reload the configuration file
bindsym $mod+Shift+r restart # Restart i3
bindsym $mod+Shift+e exec i3-exit #Exit i3
## Screenshots
bindsym Print  exec scrot -e 'mv $f ~/Images/screenshots.png'
bindsym $mod+s exec scrot -s -e 'mv $f ~/Images/screenshots12'

#================ Modes ================#
bindsym $mod+r mode "resize"
mode "resize" {
  bindsym j resize shrink width       10 px or 10 ppt
  bindsym k resize grow height        10 px or 10 ppt
  bindsym l resize shrink height      10 px or 10 ppt
  bindsym semicolon resize grow width 10 px or 10 ppt
  bindsym Left resize shrink width    10 px or 10 ppt
  bindsym Down resize grow height     10 px or 10 ppt
  bindsym Up resize shrink height     10 px or 10 ppt
  bindsym Right resize grow width     10 px or 10 ppt
# back to normal: Enter or Escape
bindsym Return mode "default"
bindsym Escape mode "default"
}
#bindsym $mod+n mode "normal"
mode "normal" {
  #normal mode without keybindings, press escape to exit
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

#================ Hotkeys ================#
## Media Desktop
# bindsym XF86AudioRaiseVolume exec amixer    set Master 2dB+ unmute
# bindsym XF86AudioLowerVolume exec amixer    set Master 2dB- unmute
# bindsym XF86AudioMute        exec amixer -q set Master mute
## Playback Controls
bindsym XF86AudioPlay  exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext  exec playerctl next
bindsym XF86AudioPrev  exec playerctl previous
#Volume 
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness


#================ i3 Bar Settings================#
bar {
  colors {
    # Whole color settings
    background 000000
    statusline #ffffff
    separator  #666666
    
    # Type             border  background font
    focused_workspace  #008fff #007fff #ffffff
    active_workspace   #333333 #5f676a #ffffff
    inactive_workspace #333333 #222222 #888888
    urgent_workspace   #aa0000 #990000 #ffffff

  }
  #i3 Status directory 
  status_command    i3status -c ~/.i3/i3status.conf
  position          top
  workspace_buttons yes
  tray_padding 2
  font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
}
## i3-gaps
for_window [class="^.*"] border pixel 0
gaps inner 15
gaps outer 15 


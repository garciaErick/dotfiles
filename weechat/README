http://pascalpoitras.com/my-weechat-configuration/

/server add im localhost -autoconnect
register erick
identify erick
account add facebook username password
/script install buffers.pl
/set weechat.bar.buffers.size_max 15
/set weechat.bar.buffers.position bottom
/set weechat.bar.nicklist.position
/set weechat.look.prefix_align none
/set weechat.look.align_end_of_lines time
/set weechat.look.eat_newline_glitch on
/mouse enable
/set trigger.trigger.beep.command "/print -beep;/exec -bg /path/to/command arguments"
/set irc.look.smart_filter on 
/filter add irc_smart * irc_smart_filter *
/script install buffers.pl buffer_autoclose.py iset.pl go.py colorize_nicks.py
/key bind meta-g /go
/set weechat.bar.status.color_bg 0
/set weechat.bar.title.color_bg 0
/set weechat.color.chat_nick_colors 1,2,3,4,5,6
/set buffers.color.hotlist_message_fg 7
/set buffers.look.hide_merged_buffers server
/set buffers.look.detach 600
/set weechat.look.buffer_notify_default message
/filter add irc_join_names * irc_366,irc_332,irc_333,irc_329,irc_324 *
/set weechat.look.prefix_same_nick "    ▶"
/set weechat.look.prefix_error "⚠"
/set weechat.look.prefix_network ""
/set weechat.look.prefix_action "⚡"
/set weechat.look.bar_more_down "▼▼"
/set weechat.look.bar_more_left "◀◀"
/set weechat.look.bar_more_right "▶▶"
/set weechat.look.bar_more_up "▲▲"
/set weechat.look.prefix_suffix "╡"
/set weechat.look.buffer_time_format "${253}%I:${245}%M"
/set weechat.bar.nicklist.position top
account facebook set show_unread true
account facebook set mark_read false
/set buffers.color.current_bg black
/set buffers.color.current_fg 31
/set buffers.color.hotlist_highlight_fg 163
/set buffers.color.hotlist_private_fg 121
/set buffers.color.number_char 245
/set buffers.color.number 239
/set weechat.bar.title.conditions "${inactive}"
/set weechat.bar.title.color_fg *31
/set weechat.bar.title.color_bg 233




## My rootstatus
/bar add status root bottom 1 0 buffer_number+:+buffer_name+(buffer_modes)+{buffer_nickiist_count}+buffer_filter,[bitlbee_typing_notice],[iag]i[aspell_suggest],[hotlist]

# Source
/bar add rootstatus root bottom 1 0 [time],[buffer_count],[buffer_plugin],buffer_number+:+buffer_name+(buffer_modes)+{buffer_nicklist_count}+buffer_filter,[bitlbee_typing_notice],[lag],[aspell_suggest],[hotlist],completion,scroll
/set weechat.bar.rootstatus.color_fg 31
/set weechat.bar.rootstatus.color_bg black
/set weechat.bar.rootstatus.separator on
/set weechat.bar.rootstatus.priority 500
/bar del status
/bar set rootstatus name status


My settings
/set weechat.bar.input.separator on
/set weechat.bar.nicklist.size_max 15
/set weechat.bar.buffers.size_max 6